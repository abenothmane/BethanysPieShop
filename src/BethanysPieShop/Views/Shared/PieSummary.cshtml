@model Pie


<div class="col">
    <div class="thumbnail">
        <img src="@Model.ImageUrl" alt="" />
        <div class="container-fluid">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Pie" asp-action="Details" asp-route-id="@Model.PieId">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
            <p>@Model.LongDescription</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-id="@Model.PieId"> Add to cart</a>
            </p>
        </div>
    </div>
   

</div>